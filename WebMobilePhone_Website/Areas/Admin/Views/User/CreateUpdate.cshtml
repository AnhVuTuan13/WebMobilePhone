@{
    //load file layout vao day
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}
<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">Add edit user</div>
        <div class="panel-body">
            <form method="post" action="" enctype="multipart/form-data">
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">UserName</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {<text>@Model.UserName</text>}" name="UserName" class="form-control" required>
                    </div>
                    <div class="col-md-2" style="color:red">
                        @ViewBag.UserName
                    </div>
                </div>

                <!-- end rows -->
                <!-- rows -->
                 <!-- rows -->
                

                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">PhoneNumber</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {
                        <text>@Model.PhoneNumber</text>
                        }" name="PhoneNumber" class="form-control" required>
                    </div>
                    <div class="col-md-2" style="color:red">
                        @ViewBag.PhoneNumber
                    </div>
                </div>

                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Address</div>
                    <div class="col-md-10">
                        <input type="text" value="@if (Model != null) {
                        <text>@Model.Address</text>
                        }" name="Address" class="form-control" required>
                    </div>
                    <div class="col-md-2" style="color:red">
                        @ViewBag.Address
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Email</div>
                    <div class="col-md-10">
                        @* thuoc tinh disabled co nghia la khong nhap duoc text vao o textbox *@
                        <input type="email" @if (Model != null) { <text> disabled</text>} value="@if (Model != null) {<text>@Model.Email</text>}" name="email" class="form-control" required>
                    </div>
                    <div class="col-md-2" style="color:red">
                        @ViewBag.Email
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Password</div>
                    <div class="col-md-10">
                        <input type="password" name="password" @if (Model != null) { <text> placeholder="Không đổi password thì không nhập thông tin vào ô textbox này" </text>  } else { <text> required</text>} class="form-control">
                    </div>
                    <div class="col-md-2" style="color:red">
                        @ViewBag.Password
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Photo</div>
                    <div class="col-md-10">
                        <input type="file" name="Photo" />
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="Process" class="btn btn-primary">
                    </div>
                </div>
                <!-- end rows -->
            </form>
        </div>
    </div>
</div>