@model WebMobilePhone_Models.Models.Discount;
@{
    ViewBag.Title = "Discount";
    Layout = "~/Areas/Admin/Views/Share/_Layout.cshtml";
}


@section header{
    <p style="margin-top: -10px;">Sửa Dòng Điện Thoại</p>
}
<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header" id="failure"></div>
            @using (Html.BeginForm("Update", "Discount", FormMethod.Post, new { @class = "form-horizontal form-label-left", @id = "frmValidate", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="box-body">
                    <input type="hidden" name="ID" class="form-control" value="@Model.Id" />

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.PercentDiscount, "Phần trăm giảm giá", new { @class = "control-label required" })
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.PercentDiscount, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12", @id = "Ten" })
                        </div>
                        @Html.ValidationMessageFor(model => model.PercentDiscount, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.StartDate, "Ngày bắt đầu", new { @class = "control-label required" })
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.StartDate,  new { @class = "form-control col-md-7 col-xs-12", @id = "Ten" })
                        </div>
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.EndDate, "Ngày kết thúc", new { @class = "control-label required" })
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.EndDate,  new { @class = "form-control col-md-7 col-xs-12", @id = "Ten" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-2">
                        <p style="color:red">@ViewBag.Date</p>
                    </div>
                    @*<input type="hidden" id="DepartmentID" name="DepartmentID" value="@ViewBag.DepartmentID" />*@
                    <!-- /.box-body -->
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-6">
                            <a href="/Admin/Discount/Index">
                                <button class="btn btn-default" type="button">Quay lại</button>
                            </a>
                            <button type="submit" class="btn btn-success">Lưu lại</button>&nbsp;

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Admin/assest/validate.js"></script>
<script src="~/Admin/assest/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
     $(document).ready(function () {
            if (@ViewBag.Failure == -1) {
                var text1 = '<div style="background-color:#fff;color:#f80000;border-color: #f80000;" class="alert" >TÊN DÒNG ĐÃ TỒN TẠI VÀ ĐANG ĐƯỢC SỬ DỤNG !</div>'
                $('#failure').append(text1);
         }
          if (@ViewBag.Failure == 0) {
                var text1 = '<div style="background-color:#fff;color:#f80000;border-color: #f80000;" class="alert" >MỜI NHẬP TÊN DÒNG !</div>'
                $('#failure').append(text1);
            }

        });
</script>

<script>
    Validator({
        form: '#frmValidate',
        rules: [

            Validator.isRequired('#Ten'),

        ]

    })
</script>
