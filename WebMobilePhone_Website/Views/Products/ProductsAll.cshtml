                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                    <!-- end box product -->
                }
                <!-- paging -->
                <div style="clear: both;"></div>
                <style type="text/css">
                    .pagination {
                        padding: 0px;
                        margin: 0px;
                    }
                </style>
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("ProductsAll", new { id = ViewBag.intCategoryID, page = page }))
                <!-- end paging -->
            </div>
        </div>
    </div>
</div>